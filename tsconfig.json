{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "exactOptionalPropertyTypes": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "*": ["./pkg/lib/*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "ES2021.String",
      "ES2021"
    ]
  },
  "include": [
    "src/**/*"
  ]
}